<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Registration Form:"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"
        android:text="Name:"
        android:ems="10"
        />
    <EditText
        android:id="@+id/edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_below="@id/txt2"
        android:textSize="20dp"
        android:hint="Enter name"
        android:ems="10"
        />
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit1"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"
        android:text="Age:"
        android:ems="10"
        />
    <EditText
        android:id="@+id/edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt3"
        android:layout_marginLeft="60dp"
        android:hint="Enter age"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit2"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"
        android:text="Mobile no:"
        android:ems="10"
        />
    <EditText
        android:id="@+id/edit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt4"
        android:layout_marginLeft="60dp"
        android:hint="Enter mobile no"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"
        android:text="Select your branch:"
        android:ems="10"
        />

    <RadioGroup
        android:id="@+id/rdgrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/txt5"
        >
    <RadioButton
        android:id="@+id/rdbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Engineering"
        android:checked="true"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"
        />
    <RadioButton
        android:id="@+id/rdbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mechanical Engineering"
        android:checked="false"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"
        />
        <RadioButton
            android:id="@+id/rdbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Civil Engineering"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            />
        <RadioButton
            android:id="@+id/rdbtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginLeft="60dp"
            android:text="Electrical Engineering"
            android:textSize="20dp"
            />

    </RadioGroup>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rdgrp"
        android:text="Submit"
        android:textSize="20dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"

        />

</RelativeLayout>